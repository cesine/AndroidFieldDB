{
  "name": "Pivot88 TouchDB Bootstrapper",
  "version": "1.0",
  "description": "This is a chrome extension for testing the Android Pivot88 bootstrapper",
  
  "app": {
    "launch": {
      "local_path": "splash.html"
    }
  },
  "offline_enabled": true,
  "permissions": [
    "unlimitedStorage",
    "<all_urls>"
  ],
  "manifest_version": 2,
  "content_security_policy": "default-src 'self'; script-src 'self'  ; connect-src 'self' https://localhost:6984 https://wentworthinspections.iriscouch.com ; object-src 'self' ;"
 
}
